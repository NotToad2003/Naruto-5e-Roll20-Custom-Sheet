{
  "html": "<div class=\"sheet-tabs\">\n  <input type=\"radio\" name=\"tab\" class=\"sheet-tab-button\" value=\"character\" checked> Character Info\n  <input type=\"radio\" name=\"tab\" class=\"sheet-tab-button\" value=\"extra\"> Extra Info\n  <input type=\"radio\" name=\"tab\" class=\"sheet-tab-button\" value=\"jutsu\"> Jutsu\n  <input type=\"radio\" name=\"tab\" class=\"sheet-tab-button\" value=\"summon\"> Summons\n  <input type=\"radio\" name=\"tab\" class=\"sheet-tab-button\" value=\"puppet\"> Puppets\n</div>\n\n<div class=\"sheet-tab-content sheet-tab-character\">\n  <h2>Character Info</h2>\n  <label>Name <input type=\"text\" name=\"attr_character_name\"></label>\n  <label>Clan <input type=\"text\" name=\"attr_clan\"></label>\n  <label>Village <input type=\"text\" name=\"attr_village\"></label>\n  <label>Rank <input type=\"text\" name=\"attr_rank\"></label>\n  <label>Chakra Base <input type=\"number\" name=\"attr_chakra_base\"></label>\n  <label>Chakra Total <input type=\"number\" name=\"attr_chakra_total\" disabled></label>\n</div>\n\n<div class=\"sheet-tab-content sheet-tab-extra\">\n  <h2>Extra Character Info</h2>\n  <label>Backstory <textarea name=\"attr_backstory\"></textarea></label>\n  <label>Attributes <textarea name=\"attr_attributes\"></textarea></label>\n  <label>Goals <textarea name=\"attr_goals\"></textarea></label>\n</div>\n\n<div class=\"sheet-tab-content sheet-tab-jutsu\">\n  <h2>Jutsu</h2>\n  <fieldset class=\"repeating_jutsu\">\n    <label>Name <input type=\"text\" name=\"attr_jutsu_name\"></label>\n    <label>Type <input type=\"text\" name=\"attr_jutsu_type\"></label>\n    <label>Rank <input type=\"text\" name=\"attr_jutsu_rank\"></label>\n    <label>Chakra Cost <input type=\"number\" name=\"attr_jutsu_cost\"></label>\n    <label>Effect <textarea name=\"attr_jutsu_effect\"></textarea></label>\n  </fieldset>\n</div>\n\n<div class=\"sheet-tab-content sheet-tab-summon\">\n  <h2>Summon Sheet</h2>\n  <fieldset class=\"repeating_summon\">\n    <label>Name <input type=\"text\" name=\"attr_summon_name\"></label>\n    <label>Species <input type=\"text\" name=\"attr_summon_species\"></label>\n    <label>Stats <textarea name=\"attr_summon_stats\"></textarea></label>\n    <label>Abilities <textarea name=\"attr_summon_abilities\"></textarea></label>\n  </fieldset>\n</div>\n\n<div class=\"sheet-tab-content sheet-tab-puppet\">\n  <h2>Puppet Master Sheet</h2>\n  <fieldset class=\"repeating_puppet\">\n    <label>Name <input type=\"text\" name=\"attr_puppet_name\"></label>\n    <label>Parts <textarea name=\"attr_puppet_parts\"></textarea></label>\n    <label>Weapons <textarea name=\"attr_puppet_weapons\"></textarea></label>\n    <label>Abilities <textarea name=\"attr_puppet_abilities\"></textarea></label>\n  </fieldset>\n</div>",
  "css": ".sheet-tabs {\n  display: flex;\n  gap: 1em;\n  margin-bottom: 10px;\n}\n.sheet-tab-content {\n  display: none;\n}\ninput.sheet-tab-button:checked + .sheet-tab-content {\n  display: block;\n}\n.sheet-tab-character, .sheet-tab-extra, .sheet-tab-jutsu, .sheet-tab-summon, .sheet-tab-puppet {\n  padding: 10px;\n  border: 1px solid #ccc;\n  background: #f9f9f9;\n}\nlabel {\n  display: block;\n  margin: 5px 0;\n}\ninput, textarea {\n  width: 100%;\n  box-sizing: border-box;\n}",
  "sheetWorkers": "on('change:chakra_base sheet:opened', function() {\n  getAttrs(['chakra_base'], function(values) {\n    const base = parseInt(values['chakra_base']) || 0;\n    setAttrs({ chakra_total: base + 10 });\n  });\n});",
  "legacy": false,
  "roll20CharacterSheet": {
